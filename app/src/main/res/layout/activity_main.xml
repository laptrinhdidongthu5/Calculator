<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="503dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_clear">

        <TextView
            android:id="@+id/textCalculator"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            tools:text="0" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/fontawasome"
        android:text="\uf55a"
        app:layout_constraintStart_toEndOf="@+id/btn_clearAll"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_clearAll"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:fontFamily="@font/fontawasome"
        android:text="\uf00d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="f00d" />

    <TableLayout
        android:id="@+id/keyboardBasic"
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickSeven"
                android:text="7"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="450dp" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickEight"
                android:text="8"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="350dp" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickNine"
                android:text="9"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="257dp" />

            <Button
                android:id="@+id/btn_div"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickDiv"
                android:text=":"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="250dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickFour"
                android:text="4"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="550dp" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickFive"
                android:text="5" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickSix"
                android:text="6" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickMul"
                android:text="x" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickOne"
                android:text="1"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="487dp" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickTwo"
                android:text="2" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickThree"
                android:text="3" />

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickSub"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickZero"
                android:text="0"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="575dp" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickDot"
                android:text="." />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickEqual"
                android:text="=" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:onClick="onClickAdd"
                android:text="+" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_arrow_left"
        android:layout_width="40dp"
        android:layout_height="400dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fontawasome"
        android:onClick="onKeyboeardAdvanced"
        android:text="\uf0d9"
        app:layout_constraintStart_toEndOf="@+id/keyboardBasic"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btn_arrow_right"
        android:layout_width="40dp"
        android:layout_height="400dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fontawasome"
        android:onClick="onKeyboeardBasic"
        android:text="\uf0da"
        app:layout_constraintStart_toEndOf="@+id/btn_arrow_left"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TableLayout
        android:id="@+id/keyboardAdvanced1"
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/btn_arrow_right"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_pow"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:fontFamily="@font/fontawasome"
                android:text="\uf12b" />

            <Button
                android:id="@+id/btn_square"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:fontFamily="@font/fontawasome"
                android:text="\uf698"
                tools:layout_editor_absoluteX="355dp"
                tools:layout_editor_absoluteY="398dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_max"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:text="max" />

            <Button
                android:id="@+id/btn_min"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:text="min"
                tools:layout_editor_absoluteX="358dp"
                tools:layout_editor_absoluteY="443dp" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/keyboardAdvanced2"
        android:layout_width="280dp"
        android:layout_height="240dp"
        app:layout_constraintStart_toEndOf="@+id/btn_arrow_right"
        app:layout_constraintTop_toBottomOf="@+id/keyboardAdvanced1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_inverse"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:text="1/x" />

            <Button
                android:id="@+id/btn_abs"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:text="|x|" />

            <Button
                android:id="@+id/btn_mod"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:text="mod"
                tools:layout_editor_absoluteX="367dp"
                tools:layout_editor_absoluteY="565dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_sin"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:text="sin" />

            <Button
                android:id="@+id/btn_cos"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:text="cos" />

            <Button
                android:id="@+id/btn_tan"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:text="tan"
                tools:layout_editor_absoluteX="328dp"
                tools:layout_editor_absoluteY="581dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_open"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:text="(" />

            <Button
                android:id="@+id/btn_close"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:text=")" />

            <Button
                android:id="@+id/btn_pi"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:text="pi"
                tools:layout_editor_absoluteX="340dp"
                tools:layout_editor_absoluteY="631dp" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>