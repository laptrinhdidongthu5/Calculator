<?xml version="1.0" encoding="utf-8"?>


<layout>

    <data>

        <variable
            name="calculator"
            type="com.pheni.calculator.Calculator" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:orientation="vertical"
        android:weightSum="100">


        <LinearLayout
            android:id="@+id/linearLayout_input"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="22"
            android:orientation="vertical"
            android:weightSum="20">
            <!--android:background="#000">-->

            <TextView
                android:id="@+id/text_expression"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_weight="8"
                android:background="#fff"
                android:hint="@string/_0"
                android:textAlignment="textEnd"
                android:textSize="35sp" />

            <EditText
                android:id="@+id/text_result"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="11"
                android:autofillHints=""
                android:background="@drawable/boders_edit_text"
                android:ems="10"
                android:hint="Begin a your expressioin on..."
                android:inputType="textPersonName"
                android:text="@{calculator.sResult}" />


        </LinearLayout>

        <LinearLayout

            android:id="@+id/editTextInput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="8"
            android:background="#fff"
            android:orientation="horizontal"
            android:weightSum="20">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"></View>

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="@font/fontawasome"
                android:onClick="onClickRemove"
                android:text="@string/uf55a" />

            <Button
                android:id="@+id/btn_clearAll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="@font/fontawasome"
                android:onClick="onClickDelete"
                android:text="@string/uf00d" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TableKeyBoardLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="70"
            android:orientation="vertical"
            android:weightSum="20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="19"
                android:orientation="vertical"
                android:weightSum="40">


                <TableLayout
                    android:id="@+id/basic_keyBoard"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:orientation="vertical"
                    android:textSize="30sp"
                    android:weightSum="20">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:textSize="30sp"
                        android:weightSum="10">

                        <Button
                            android:id="@+id/btn_seven"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button"
                            android:onClick="onClickNumber"
                            android:tag="7"
                            android:text="@string/_7"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/btn_eight"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button"
                            android:onClick="onClickNumber"
                            android:tag="8"
                            android:text="@string/_8"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/btn_nine"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button"
                            android:onClick="onClickNumber"
                            android:tag="9"
                            android:text="@string/_9"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/btn_div"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button_dau"
                            android:onClick="onClickNumber"
                            android:tag="/"
                            android:text="@string/uDiv"
                            android:textSize="25sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">>

                        <Button
                            android:id="@+id/btn_four"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button"
                            android:onClick="onClickNumber"
                            android:tag="4"
                            android:text="@string/_4"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/btn_five"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button"
                            android:onClick="onClickNumber"
                            android:tag="5"
                            android:text="@string/_5"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/btn_six"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button"
                            android:onClick="onClickNumber"
                            android:tag="6"
                            android:text="@string/_6"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/btn_mul"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button_dau"
                            android:onClick="onClickNumber"
                            android:tag="x"
                            android:text="@string/x"
                            android:textSize="25sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">>

                        <Button
                            android:id="@+id/btn_one"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button"
                            android:onClick="onClickNumber"
                            android:tag="1"
                            android:text="@string/_1"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/btn_two"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button"
                            android:onClick="onClickNumber"
                            android:tag="2"
                            android:text="@string/_2"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/btn_three"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button"
                            android:onClick="onClickNumber"
                            android:tag="3"
                            android:text="@string/_3"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/btn_sub"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button_dau"
                            android:onClick="onClickNumber"
                            android:tag="-"
                            android:text="@string/uSub"
                            android:textSize="25sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">>

                        <Button
                            android:id="@+id/btn_zero"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button"
                            android:onClick="onClickNumber"
                            android:tag="0"
                            android:text="@string/_0"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/btn_dot"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button_point"
                            android:onClick="onClickNumber"
                            android:tag="."
                            android:text="@string/uPoint"
                            android:textSize="25sp"

                            />

                        <Button
                            android:id="@+id/button17"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button_equal"
                            android:onClick="onClickResult"
                            android:text="@string/uEqual"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/button18"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="2.5"
                            android:background="@drawable/boders_button_dau"
                            android:onClick="onClickNumber"
                            android:tag="+"
                            android:text="@string/uCong"
                            android:textSize="25sp" />
                    </TableRow>


                </TableLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>
